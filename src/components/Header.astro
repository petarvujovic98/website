---
import ShowToy from "./ShowToy.svelte";
import { Image } from "astro:assets";
import headshot from "../assets/headshot.jpg";
---

<header
  class="my-8 col-span-12 flex justify-between font-semibold max-w-screen-2xl w-full mx-auto px-4"
>
  <h2 class="my-2 mx-0 w-1/4 text-center">
    <!-- <a href="/"> -->
    <ShowToy client:visible />
    <!-- </a> -->
  </h2>
  <div class="w-28 h-28 overflow-hidden rounded-full mt-4">
    <Image
      src={headshot}
      alt="Petar Vujovic"
      class="w-full object-cover object-top -translate-y-6"
    />
  </div>
</header>
